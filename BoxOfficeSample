// Michael Olaoye
// Program that calculates a Box Office Profit (Net and Gross)

#include <iostream>
#include <iomanip>
#include <string>

using namespace std;

int main(void) {
	const double CHILD_TICKET = 3.00, 
		ADULT_TICKET = 6.00, 
		PROFIT_PERCENT = 0.2;
	string movieName;
	int noOfAdultTicket, noOfChildTicket;
	double grossBoxOfficeProfit, 
		   netBoxOfficeProfit, 
		   amtPaidToDistributors;

	cout << "Enter the name of the movie: ";
	getline(cin, movieName);

	cout << "Enter the number of Adult Tickets Sold: ";
	cin >> noOfAdultTicket;

	cout << "Enter the number of Child Tickets Sold: ";
	cin >> noOfChildTicket;

	grossBoxOfficeProfit = ((noOfAdultTicket * ADULT_TICKET) + (noOfChildTicket * CHILD_TICKET));
	netBoxOfficeProfit = PROFIT_PERCENT * grossBoxOfficeProfit;
	amtPaidToDistributors = grossBoxOfficeProfit - netBoxOfficeProfit;

	cout << setprecision(2) << fixed << showpoint << endl;
	cout << "Movie Name:..........................." << movieName << endl;
	cout << "Adult Tickets Sold:..................." << noOfAdultTicket << endl;
	cout << "Child Tickets Sold:..................." << noOfChildTicket << endl;
	cout << "Gross Box Office Profit:..............$ " << grossBoxOfficeProfit << endl;
	cout << "Net Box Office Profit:................$ " << netBoxOfficeProfit << endl;
	cout << "Amount Paid to Distributors:..........$ " << amtPaidToDistributors << endl;

	return 0;
}
